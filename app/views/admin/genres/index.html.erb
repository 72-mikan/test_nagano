<%= render '/layouts/admin_header' %>

<div class="container">
  <h2>ジャンル一覧・追加</h2>
  
  <div class="row">
    
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
  </div>
  
  <div class="row">
    
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <table>
        <tr>
          <th width="150">ジャンル名</th>
          <th width= "250"><%= f.text_field :name %></th>
          <th><%= f.submit '新規投稿', class:"btn btn-success" %></th>
        </tr>
      </table>
    <% end %>
    
  </div>
  
  <div class="row">
    <table>
      <thead>
        <tr>
          <th width="200" align="center" valign="center">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @genres.each do |genre| %>
          <tr class="border-top border-bottom">
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>