<%= render '/layouts/admin_header' %>

<div class="container">
  <h2>会員一覧</h2>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table>
        <thead>
          <tr class="border-top border-bottom" height="50">
            <th width="80">会員ID</th>
            <th width="150">氏名</th>
            <th width="200">メールアドレス</th>
            <th width="100">ステータス</th>
          </tr>
        </thead>
        
        <tbody>
          <% @customers.each do |customer| %>
            <tr class="border-top border-bottom" height="70">
              <td><%= customer.id %></td>
              <td><%= customer.last_name %><%= customer.first_name %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted != true %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
</div>