<%= render '/layouts/customer_header' %>

<div class="container">
  
  <div class="row">
    <h2>配送先編集</h2>
  </div>
  
  <div class="row">
    <% if @address.errors.any? %>
      <%= @address.errors.count %>件のエラーが発生しました
      <ul>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="row">
    <table>
    <%= form_with model: @address, url: customer_address_path(@address.id), local: true do |f| %>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <th>
          <%= f.text_field :postal_code %>
        </th>
      </tr>
      
      <tr>
        <th>住所</th>
        <th><%= f.text_field :address %></th>
      </tr>
      
      <tr>
        <th>宛名</th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '変更内容を保存', class:"btn btn-success" %></th>
      </tr>
    <% end %>
    </table>
  </div>
  
</div>