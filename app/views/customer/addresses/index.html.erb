<%= render '/layouts/customer_header' %>

<div class="container">
  
  <div class="row">
    <h2>配送先登録/一覧</h2>
  </div>
  
  <div class="row">
    <% if @address.errors.any? %>
      <%= @address.errors.count %>件のエラーが発生しました
      <ul>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="row">
    <table>
    <%= form_with model: @address, url: customer_addresses_path, local: true do |f| %>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <th>
          <%= f.text_field :postal_code %>
        </th>
      </tr>
      
      <tr>
        <th>住所</th>
        <th><%= f.text_field :address %></th>
      </tr>
      
      <tr>
        <th>宛名</th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '新規登録', class:"btn btn-success" %></th>
      </tr>
    <% end %>
    </table>
  </div>
  
  <div class="row">
    <table border="1">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_customer_address_path(address.id), class:"btn btn-success" %></td>
            <td><%= link_to "削除する", customer_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>