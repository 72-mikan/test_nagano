<%= render '/layouts/customer_header' %>

<div class="container">
  <h2>ショッピングカート</h2>
  <% if @cart_items.exists? %>.
  <%= link_to "カートを空にする", customer_cart_item_destroy_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
  <div class="row">
    <table border="1">
      <thead>
        <tr>
          <th colspan="2">商品名</th>
          <th>単価(税込)</th>
          <th colspan="2">数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_image(50, 50) %></td>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <%= form_with model: cart_item, url: customer_cart_item_path(cart_item.id), local: true do |f| %>
              <td><%= f.select :amount, *[1..9] %></td>
              <td><%= f.submit "変更", class:"btn btn-success" %></td>
            <% end %>
            <td><%= cart_item.subtotal %></td>
            <% @sum +=  cart_item.subtotal %>
            <td><%= link_to "削除する", customer_cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
      
      <tbody>
        <tr>
          <td colspan="2"><%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %> </td>
          <td style="border:none;"></td>
          <td style="border:none;"></td>
          <td style="border:none;"></td>
          <td>合計金額</td>
          <td><%= @sum %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to "情報入力に進む", new_customer_order_path, class:"btn btn-success" %>
  
  <% else %>
  <h2>カートに商品がありません</h2>
  <% end %>
</div>

