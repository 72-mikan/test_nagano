<%= render '/layouts/customer_header' %>
<div class="container">
  
  <div class="row">
    <h2>会員情報編集</h2>
  </div>
  
  <div class="row">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="row">
    <%= form_with model: @customer, url: my_information_path do |f| %>
      <table>
        
        <tr>
          <th>氏名</th>
          <th width="230", height="40"><%= f.text_field :last_name, size: 20 %></th>
          <th><%= f.text_field :first_name, size: 20 %></th>
        </tr>
        
        <tr>
          <th>フリガナ</th>
          <th width="230", height="40"><%= f.text_field :last_name_kana, size: 20 %></th>
          <th><%= f.text_field :first_name_kana, size: 20 %></th>
        </tr>
        
        <tr>
          <th>郵便番号</th>
          <th height="40"><%= f.text_field :postal_code, size: 20 %></th>
        </tr>
        
        <tr>
          <th>住所</th>
          <th colspan="3", height="40"><%= f.text_field :address, size: 60 %></th>
        </tr>
        
        <tr>
          <th>電話番号</th>
          <th height="40"><%= f.text_field :telephone_number, size: 20 %></th>
        </tr>
        
        <tr>
          <th>メールアドレス</th>
          <th height="40"><%= f.text_field :email, size: 20 %></th>
        </tr>
        
        <tr>
          <th></th>
          <th colspan="2", height="50"><%= f.submit "編集内容を保存", class:"btn btn-success" %></th>
          <th><%= link_to "退会する", unsubscribe_path, class:"btn btn-danger" %></th>
        </tr>
      </table>
      
    <% end %>
  </div>
</div>